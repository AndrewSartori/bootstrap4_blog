<% include ./partials/header %>

<!-- Page Header -->
    <header class="masthead" style="background-image: url('img/about-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>All Articles</h1>
              <span class="subheading">Listed, Below!</span>
              <br><br>
              <span>
                <div class="clearfix">
                  <a class="btn btn-primary center" href="/new">NEW ARTICLE</a>
                </div>
              </span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            
            <% Articles.forEach(function(article){ %>
                <div class="post-preview">
                    <a href="posts/<%= article._id %>">
                        <h2 class="post-title">
                            <%= article.title %>
                        </h2>
                        <h3 class="post-subtitle">
                            <%= article.subTitle %>
                        </h3>
                    </a>
                    <p class="post-meta">Creation Date:  <%= article.created_date %><</p>
                </div>
                <hr>
            <% }); %>
            
          <!-- Pager -->
          <!--<div class="clearfix">-->
          <!--  <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>-->
          <!--</div>-->
        </div>
      </div>
    </div>

    <hr>

<% include ./partials/footer %>